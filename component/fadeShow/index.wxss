/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0,.5);
  overflow: hidden;  
  z-index: 1000;
  color: #fff;
  animation: modalAnmation .3s ease-in-out;
}
/*对话框 */
.commodity_attr_box {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding:20rpx 3%;
  box-sizing: border-box;
  animation: modalAnmation .3s ease-in-out;
  height: 700rpx;
}

@keyframes modalAnmation {
  0% {
   opacity: 0;
    transform: translate3d(0, 100%, 0);
  }

  100% {
   opacity: 1;
   transform: translate3d(0, 0, 0);
  }
}
